<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="224.0" prefWidth="327.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.patternControlPanel.trialConfig.SavedTrialsController">
   <center>
      <BorderPane prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <center>
            <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="142.0" prefWidth="267.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="318.0" text="Saved Trials">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <VBox prefHeight="33.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <Label text="Choose a Trial" />
                        <ComboBox fx:id="trialSelectDropdown" onAction="#handleSelectDropdownChanged" prefWidth="150" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="39.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Button fx:id="selectButton" mnemonicParsing="false" onAction="#handleSelectClick" text="Select" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteClick" text="Delete" />
                        <Button fx:id="clearAllButton" mnemonicParsing="false" onAction="#handleClearAllClick" text="Clear All" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </center>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </BorderPane>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
