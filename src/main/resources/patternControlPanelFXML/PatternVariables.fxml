<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="224.0" prefWidth="327.0" xmlns="http://javafx.com/javafx/21.0.7" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.patternControlPanel.pattern.TrialVariablesController">
   <center>
      <BorderPane prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <center>
            <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="142.0" prefWidth="267.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Choose a Pattern" />
                  <ComboBox fx:id="trialSelectDropdown" prefWidth="150" />
                  <HBox alignment="CENTER" prefHeight="39.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Button fx:id="selectPatternButton" mnemonicParsing="false" onAction="#activateSelectedPattern" text="Select" />
                        <Button fx:id="deletePatternButton" mnemonicParsing="false" onAction="#deleteSelectedPattern" text="Delete" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </center>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </BorderPane>
   </center>
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="318.0" text="Saved Pattern Configurations" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
